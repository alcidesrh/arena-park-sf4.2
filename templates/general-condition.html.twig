{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/tarif') }}
{% endblock %}
{% block title %}{% endblock %}

{% block body %}
    <div class="section  no-pad-bot">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        {% for section in sections %}
                            <div class="mt-5"></div>
                            {% if section.title is not empty %}
                                <span class="card-title">{{ section.title }}</span><br>
                            {% endif %}
                            <p>
                                {{ section.content | raw }}
                            </p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
