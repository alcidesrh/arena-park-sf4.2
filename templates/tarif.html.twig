{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/tarif') }}
{% endblock %}
{% block title %}{% endblock %}


{% block body %}
    <div class="section  no-pad-bot">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                            <table class="responsive-table">
                                {#<thead>#}
                                {#<tr>#}
                                    {#<th></th>#}
                                    {#<th></th>#}
                                    {#<th></th>#}
                                    {#<th><i class="small material-icons big_car">local_car_wash</i></th>#}
                                {#</tr>#}
                                {#</thead>#}
                                <tbody>
                                    <tr>
                                        <td>Jours</td>
                                        <td>{{ tarifs.day }} CHF</td>
                                    </tr>
                                    <tr>
                                        <td>Prise en charge du véhicule (obligatoire)</td>
                                        <td>{{ tarifs.priceCharge }} CHF</td>
                                    </tr>
                                    <tr>
                                        <td>Assurance annulation vol (obligatoire)</td>
                                        <td>{{ tarifs.annulation }} CHF</td>
                                    </tr>
                                </tbody>
                            </table>
                        <div class="my-3"></div>
                        {% for section in sections %}
                            <p>
                                {{ section.content | raw }}
                            </p>
                        {% endfor %}

                    </div>
                </div>

                {% if discounts is not empty %}
                    <div class="card">
                    <div class="card-content">
                            <table class="responsive-table">
                                <tbody>
                                    <tr>
                                        <td>Réservations sur 12 mois</td>
                                        <td>Taux de récompense</td>
                                    </tr>
                                    {% for discount in discounts %}
                                      <tr >
                                        <td>{{discount.min }}{{discount.max ? '-'~ discount.max : '+'}}</td>
                                        <td>{{ discount.discount }}%</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                    </div>
                    {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
