{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/services') }}
{% endblock %}
{% block title %}{% endblock %}


{% block body %}
    <div class="section  no-pad-bot hide-on-small-only show-on-medium-and-up">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        {% if eachCar | length %}
                            <table class="responsive-table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th><i class="small material-icons small_car">local_car_wash</i></th>
                                    <th><i class="small material-icons middle_car">local_car_wash</i></th>
                                    <th><i class="small material-icons big_car">local_car_wash</i></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for service in eachCar %}
                                    <tr>
                                        <td>{{ service.name }}</td>
                                        <td>{{ service.small }} CHF</td>
                                        <td>{{ service.middle }} CHF</td>
                                        <td>{{ service.big }} CHF</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                        <div class="my-3"></div>
                        {% if allCar | length %}
                            <table class="responsive-table centered">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        <i class="small material-icons small_car" color="teal">local_car_wash</i>
                                        <i class="small material-icons middle_car">local_car_wash</i>
                                        <i class="small material-icons big_car">local_car_wash</i>
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for service in allCar %}
                                    <tr>
                                        <td class="left">{{ service.name }}</td>
                                        <td>{{ service.all }} CHF</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                        <div class="my-3"></div>
                        <p>
                            {{ sections['section1'].content | raw }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section  no-pad-bot hide-on-med-and-up show-on-small">
        {% if eachCar | length %}
            <div class="row">
                <div class="col s6"></div>
                <div class="col s2 p-0"><i class="small material-icons small_car">local_car_wash</i></div>
                <div class="col s2 p-0"><i class="small material-icons middle_car">local_car_wash</i></div>
                <div class="col s2 p-0"><i class="small material-icons big_car">local_car_wash</i></div>
            </div>
            {% for service in eachCar %}
                <div class="row">
                    <div class="col s6">{{ service.name }}</div>
                    <div class="col s2 p-0">{{ service.small }} CHF</div>
                    <div class="col s2 p-0">{{ service.middle }} CHF</div>
                    <div class="col s2 p-0">{{ service.big }} CHF</div>
                </div>
            {% endfor %}
        {% endif %}
        <div class="my-3"></div>
        {% if allCar | length %}
            <div class="row">
                <div class="col s6"></div>
                <div class="col s4 center">
                    <i class="small material-icons small_car" color="teal">local_car_wash</i>
                    <i class="small material-icons middle_car">local_car_wash</i>
                    <i class="small material-icons big_car">local_car_wash</i>
                </div>
            </div>
            {% for service in allCar %}
                <div class="row">
                    <div class="col s6">{{ service.name }}</div>
                    <div class="col s4 center">{{ service.all }} CHF</div>
                </div>
            {% endfor %}
        {% endif %}
        <div class="my-3"></div>
        <div class="row">
            <div class="col s12">
                <p>
                    {{ sections['section1'].content | raw }}
                </p>
            </div>
        </div>
    </div>

{% endblock %}
